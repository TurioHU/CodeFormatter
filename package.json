{
  "name": "codeformatter",
	"displayName": "CodeFormatter",
	"description": "Program for fun and more happy",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:codeformatter.helloWorld"
	],
	"main": "./extension.js",
	"contributes": {
		"menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "codeformatter.GetCurrentFilePath",
                    "group": "1_modification"
                }
            ],
            "explorer/context": [
                {
                    "command": "codeformatter.CreateModuleByTemplete",
                    "group": "1_modification"
                },
				{
					"command": "codeformatter.UpdateModuleByTemplete",
                    "group": "1_modification"
                }
            ]
        },

		"commands": [
			{
				"command": "codeformatter.GetCurrentFilePath",
				"title": "CF: GetCurrentFilePath"
			},
			{
				"command": "codeformatter.CreateModuleByTemplete",
				"title": "CF: CreateModuleByTemplete"
			},
			{
				"command": "codeformatter.UpdateModuleByTemplete",
				"title": "CF: UpdateModuleByTemplete"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.67.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.6.4",
        "@vscode/test-electron": "^2.1.3"
    }

}
